{
  "root": true,
  "overrides": [
    {
      "files": [
        "**/*.ts",
        "**/*.js"
      ],
      "env": {
        "jest": true,
        "node": true
      },
      "parser": "@typescript-eslint/parser",
      "plugins": [
        "@typescript-eslint"
      ],
      "extends": [
        "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
        "@typescript-eslint/camelcase": [
          "off"
        ],
        "@typescript-eslint/no-unused-vars": [
          "off"
        ],
        "@typescript-eslint/explicit-function-return-type": [
          "off"
        ]
      }
    }
  ],
  "settings": {
    "import/extensions": [
      ".ts",
      ".js"
    ],
    "packageManager": "pnpm"
  }
}
