extends ../layout/index.pug

block scripts

block append stylesheets
  link(rel='stylesheet' href='/pressure/message.css')
  link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Droid+Sans|Roboto:100,300')

block content
  section.hero
    .hero-body
      img.logo(src='https://s3.amazonaws.com/hub-central/uploads/1502227154_betamarca.png')

  section.header Mensagem aos deputados

  section.content
    each line, index in pressureEmailBody.split(/\n/)
      if index === 0
        span.big= line
      else
        = line
      br

  section.footer
    img(
      width='100'
      height='100'
      src='https://scontent.fcgh12-1.fna.fbcdn.net/v/t1.0-9/20728158_504976603182822_3375820051118215309_n.png?oh=7ba83b4f9c114c83867d00cf4cde1de4&oe=5A2F0FBF'
    )
    .beta BETA

