{
  "name": "bonde-bot",
  "version": "2.1.10",
  "description": "Enable activist to pressure through facebook",
  "main": "dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "nodemon -r '@babel/register' -r dotenv/config ./src/index.js",
    "start": "node ./dist/index.js",
    "start:worker": "node ./dist/workers/process-bot-mass-message-queue.js",
    "test": "jest",
    "coverage": "npm test -- --coverage",
    "postcoverage": "open-cli coverage/lcov-report/index.html",
    "lint": "eslint .",
    "flow": "flow check",
    "docs": "documentation readme src --section=install",
    "postdocs": "git add README.md",
    "clean": "rimraf dist",
    "flowbuild": "flow-copy-source src dist",
    "prebuild": "npm run docs && npm run clean && npm run flowbuild",
    "build": "babel src -d dist",
    "prerelease": "npm run lint && npm test && npm run build",
    "release": "standard-version",
    "postpublish": "git push origin master --follow-tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [
    "generator-nod"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nossas/bonde-bot.git"
  },
  "author": "Lucas Pirola<pirola@nossas.org>",
  "license": "GPL-3.0",
  "dependencies": {
    "apollo-client": "^1.7.0",
    "axios": "^0.19.0",
    "body-parser": "^1.18.3",
    "bull": "^3.4.4",
    "colors": "^1.3.1",
    "config": "^3.2.2",
    "cors": "^2.8.4",
    "dateformat": "^3.0.3",
    "dotenv": "^8.0.0",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "express-session": "^1.15.3",
    "graphql-tag": "^2.9.2",
    "isomorphic-fetch": "^2.2.1",
    "jwt-decode": "^2.2.0",
    "messenger-bot": "nossas/messenger-bot#master",
    "morgan": "^1.9.0",
    "node-wit": "^4.3.0",
    "pug": "^2.0.3",
    "underscore": "^1.9.1"
  },
  "devDependencies": {
    "@babel/cli": "7.5.5",
    "@babel/core": "7.5.5",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-flow": "7.0.0",
    "@babel/register": "7.5.5",
    "babel-eslint": "10.0.2",
    "babel-jest": "24.8.0",
    "documentation": "12.1.1",
    "eslint": "6.1.0",
    "eslint-config-standard": "13.0.1",
    "eslint-plugin-flowtype": "3.13.0",
    "eslint-plugin-flowtype-errors": "4.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.0",
    "flow-bin": "0.104.0",
    "flow-copy-source": "2.0.7",
    "husky": "3.0.2",
    "jest": "24.8.0",
    "lint-staged": "9.2.1",
    "nodemon": "1.19.1",
    "open-cli": "5.0.0",
    "rimraf": "2.6.3",
    "standard-version": "7.0.0"
  }
}
